  <%= link_to counter.name,counter,:class => 'but'%><br>
      <div id="mild">
      <%= truncate(counter.content,:length => 50) %>
      </div><br> 
  <% end %>
  <%= link_to 'Add link',new_counter_path ,:class => 'but1' %>
</div>
    

  <div id='withtitle'>
  <% @counters.each do |counter| %>
